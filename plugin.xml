<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
  id="cordova-plugin-wkwebview-polyfill"
  version="2.1.0">

    <name>CordovaPlugin</name>
    <description>Plugin Description</description>
    <author>@tkyj</author>
    <license>Apache 2.0 License</license>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
		    <feature name="CDVC">
			    <param name="ios-package" value="CDVC"/>
			    <param name="onload" value="true"/>
		    </feature>
        </config-file>

        <header-file src="src/ios/CDVC.h" />
        <source-file src="src/ios/CDVC.m" />
        <header-file src="src/ios/CDVCURLP.h" />
        <source-file src="src/ios/CDVCURLP.m" />
    </platform>

    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="DR">
                <param name="android-package" value="com.tkyj.cdv.DR" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <source-file src="src/android/com/tkyj/cdv/AI.java" target-dir="src/com/tkyj/cdv" />
        <source-file src="src/android/com/tkyj/cdv/TE.java" target-dir="src/com/tkyj/cdv" />
        <source-file src="src/android/com/tkyj/cdv/DR.java" target-dir="src/com/tkyj/cdv" />
    </platform>

    <cf>
        <include>
            <file regex="\.(htm|html|js|css)$" />
        </include>
        <exclude>
        </exclude>
    </cf>

    <hook type="after_prepare" src="hooks/cash.js" />
    <hook type="after_prepare" src="hooks/sash.js" />

    <hook type="after_prepare" src="hooks/cap.js" />

</plugin>
